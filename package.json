{
  "name": "glimpse-api",
  "version": "1.0.0",
  "description": "Backend API for the Glimpse RPI TV website",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/index.js",
    "generate": "npm run generate.prisma && npm run generate.graphql",
    "generate.prisma": "prisma generate",
    "generate.graphql": "graphql-codegen",
    "build": "tsc && cp ./src/schema.graphql ./dist/schema.graphql",
    "docker.build": "docker build --tag rpitv/glimpse-api .",
    "dev": "concurrently \"nodemon -L -e ts,js,json src/index.ts | npx pino-pretty -c\" \"npm run generate.graphql --watch\"",
    "dev.debug": "concurrently \"nodemon -L -e ts,js,json --exec \\\"node --inspect=0.0.0.0:5858 --require ts-node/register\\\" src/index.ts | npx pino-pretty -c\" \"npm run generate.graphql --watch\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rpitv/glimpse-api.git"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/rpitv/glimpse-api/issues"
  },
  "homepage": "https://github.com/rpitv/glimpse-api#readme",
  "dependencies": {
    "@casl/ability": "^5.4.4",
    "@casl/prisma": "^1.0.2",
    "@graphql-tools/load-files": "^6.5.4",
    "@graphql-tools/schema": "^8.3.14",
    "@graphql-tools/utils": "^8.6.13",
    "@graphql-yoga/node": "^2.9.1",
    "@prisma/client": "^3.14.0",
    "amqplib": "^0.10.3",
    "argon2": "^0.28.5",
    "body-parser": "^1.19.0",
    "connect-redis": "^6.1.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "fs-extra": "^8.1.0",
    "graphql": "^15.8.0",
    "graphql-scalars": "^1.17.0",
    "graphql-type-json": "^0.3.2",
    "ip": "^1.1.8",
    "meilisearch": "^0.25.1",
    "pino": "^8.1.0",
    "redis": "^4.1.0",
    "sharp": "^0.30.3",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.16.5",
    "@graphql-codegen/typescript": "2.5.0",
    "@graphql-codegen/typescript-resolvers": "2.6.5",
    "@types/amqplib": "^0.8.2",
    "@types/connect-redis": "^0.0.18",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/fs-extra": "^8.1.1",
    "@types/ip": "^1.1.0",
    "@types/node": "^17.0.31",
    "@types/sharp": "^0.24.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1",
    "node-ts": "^5.1.2",
    "nodemon": "^2.0.7",
    "pino-pretty": "^8.1.0",
    "prettier": "^2.6.2",
    "prisma": "^3.14.0",
    "ts-node": "^10.7.0"
  }
}
